@namespace NummyUi.Pages.Database.Dashboard
@page "/database/dashboard"

<GridContent>
    <Row Type="flex" Gutter="24">
        <AntDesign.Col Xs="24" Sm="12" Md="12" Lg="12" Xl="6" Style="margin-bottom: 24px;">

            @foreach (var migration in _pendingMigrations)
            {
                <p>@migration</p>
            }
            
            @if (_migrationResult != null)
            {
                @if (_migrationResult.Value)
                {
                    <p>All waiting migrations have been migrated successfully</p>
                }
                else
                {
                    <p>Error occurred while migration of waiting migrations</p>
                }
            }
            
            @if (_pendingMigrations.Any())
            {
                <Button OnClick="Migrate">
                    <Icon Type="plus"/> Migrate
                </Button>
            }
        </AntDesign.Col>
        <AntDesign.Col Xs="24" Sm="12" Md="12" Lg="12" Xl="6" Style="margin-bottom: 24px;">

        </AntDesign.Col>

    </Row>
</GridContent>