<div class="card-container">
    <div class="card-content">
        <Space Align="SpaceAlign.Center">
            <SpaceItem>
                <Icon Type="@IconType.Outline.Sync" Spin/>
                <Icon Type="@IconType.Outline.RadarChart" Theme="Outline"/>
            </SpaceItem>
            <SpaceItem>
                <Text Type="secondary">AI Suggestions</Text>
            </SpaceItem>
        </Space>
    </div>
</div>

<style>
    .card-container {
        position: relative;
        width: 600px;
        height: 420px;
        background: rgba(255, 255, 255, 0);
        border-radius: 4px;
        overflow: hidden;
        z-index: 0;
    }

    .card-container::before {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: conic-gradient(
            from 0deg,
            #00ffcc,
            #0066ff,
            #cc00ff,
            #00ffcc
        );
        animation: rotate 6s linear infinite;
        z-index: -2;
    }

    .card-container::after {
        content: "";
        position: absolute;
        top: 4px;
        left: 4px;
        right: 4px;
        bottom: 4px;
        background: #ffffff;
        border-radius: 3px;
        z-index: -1;
    }

    .card-content {
        padding: 24px;
        color: #bdacac;
    }

    .card-content h2 {
        font-size: 24px;
        margin-bottom: 12px;
    }

    .card-content p {
        font-size: 16px;
        line-height: 1;
        opacity: 0.8;
    }

    @@keyframes rotate {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
    }
</style>