@namespace  NummyUi.Pages.Dashboard.Analysis.Components.Charts.Field
@inherits AntDomComponentBase

<div class="field">
    <span class="label">@Label</span>
    <span class="number">@Value</span>
    <br/>
    @if(!string.IsNullOrWhiteSpace(Description))
    {
        <AntDesign.Text Disabled Style="font-size: 10px">@Description</AntDesign.Text>
    }
</div>

@*todo: fix this why not css*@
<style>
    .field {
        margin: 0;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }
    .field .label,
    .field .number {
        font-size: 14px;
        line-height: 22px;
    }
    .field .number {
        margin-left: 8px;
        color: rgba(0, 0, 0, 0.85);
    }
</style>
