@namespace NummyUi.Pages.User.Login
@layout NummyUi.Layouts.BasicLayout
@page "/user/login"

@using AntDesign
@using Microsoft.AspNetCore.Components

<div class="auth-page-layout">
    <div class="card-container">
        <div class="brand">
            <img src="pro_icon.svg" alt="Nummy Logo" style="width: 26px; height: 26px; margin-right: 8px;" />
            <span class="brand-text">Nummy</span>
        </div>

        <div class="login-card">
            <p class="subtitle">Please enter your details</p>
            <h2 class="title">Welcome back</h2>

            <Form Model="@_model" OnFinish="Login">
                <FormItem>
                    <AntDesign.Input Placeholder="Email address" Size="large" @bind-Value="@context.Email">
                    </AntDesign.Input>
                </FormItem>
                <FormItem>
                    <AntDesign.Input Placeholder="Password" Size="large" @bind-Value="@context.Password"
                                     Type="password">
                    </AntDesign.Input>
                </FormItem>
                <div class="remember-forgot">
                    <Checkbox Checked="@context.AutoLogin">
                        Remember me
                    </Checkbox>
                    <a class="forgot-link">Forgot password</a>
                </div>

                <Button Type="primary" HtmlType="submit" Class="submit" Size="large" Block Loading="@_isLoading">Sign in</Button>

                <Button Class="google-button" Size="large" Block>
                    <Space>
                        <Icon Type="google" />
                        <span>Sign in with Google</span>
                    </Space>
                </Button>

                <div class="register-link">
                    Don't have an account? <a href="/user/register">Sign up</a>
                </div>
            </Form>
        </div>
    </div>
</div>

<style>
    .auth-page-layout {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f0f2f5;
        padding: 24px;
    }

    .card-container {
        width: 100%;
        max-width: 400px;
    }

    .brand {
        display: flex;
        align-items: center;
        margin-bottom: 24px;
    }

    .brand-text {
        font-size: 24px;
        font-weight: 600;
        color: #1f1f1f;
    }

    .login-card {
        background: white;
        padding: 32px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .subtitle {
        color: #666;
        margin-bottom: 8px;
    }

    .title {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 32px;
        color: #1f1f1f;
    }

    .remember-forgot {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
    }

    .forgot-link {
        color: #4096ff;
    }

    .submit {
        margin-bottom: 16px;
    }

    .google-button {
        margin-bottom: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .register-link {
        text-align: center;
    }

    .register-link a {
        color: #4096ff;
    }
</style>