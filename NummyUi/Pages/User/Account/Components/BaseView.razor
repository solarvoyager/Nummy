@namespace NummyUi.Pages.User.Account.Components

<div class="baseView" style="display: flex; padding-top: 12px;">
    <div class="left" style="min-width: 310px; max-width: 448px;">
        <Form 
            Layout="@FormLayout.Vertical"
            OnFinish="HandleFinish"
            Model="@_model">
            <FormItem Label="Email">
                <AntDesign.Input @bind-Value="@context.Email" />
            </FormItem>
            <FormItem Label="Name">
                <AntDesign.Input @bind-Value="@context.Name" />
            </FormItem>
            <FormItem Label="Surname">
                <AntDesign.Input @bind-Value="@context.Surname" />
            </FormItem>
            <FormItem>
                <InputGroup Compact Size="@InputSize.Large" Style="display: table">
                    <Select TItem="string"
                            TItemValue="string"
                            DefaultValue=@("+994")
                            Style="width: 25%"
                            Size="large">
                        <SelectOptions>
                            <SelectOption TItem="string" TItemValue="string" Value="@("+994")" Label="+994"/>
                        </SelectOptions>
                    </Select>
                    <Select TItem="string"
                            TItemValue="string"
                            DefaultValue=@("50")
                            Style="width: 20%"
                            Size="large">
                        <SelectOptions>
                            <SelectOption TItem="string" TItemValue="string" Value="@("10")" Label="10"/>
                            <SelectOption TItem="string" TItemValue="string" Value="@("50")" Label="50"/>
                            <SelectOption TItem="string" TItemValue="string" Value="@("51")" Label="51"/>
                            <SelectOption TItem="string" TItemValue="string" Value="@("55")" Label="55"/>
                            <SelectOption TItem="string" TItemValue="string" Value="@("70")" Label="70"/>
                            <SelectOption TItem="string" TItemValue="string" Value="@("77")" Label="77"/>
                        </SelectOptions>
                    </Select>
                    <Input Placeholder="Phone Number" Style="width: 55%;" @bind-Value="@context.Phone" MaxLength="7"></Input>
                </InputGroup>
            </FormItem>
            <FormItem>
                <Button HtmlType="submit" Type="@ButtonType.Primary">
                    Update Information
                </Button>
            </FormItem>
        </Form>
    </div>
    <div class="right" style="flex: 1; padding-left: 104px;">
        <div style="margin-bottom: 8px; color: rgba(0,0,0,.85); font-size: 14px;">Avatar</div>
        <div style="width: 144px; height: 144px; margin-bottom: 12px; overflow: hidden;">
            <img src="@_model.Avatar" alt="avatar" style="width: 100%;" />
        </div>
        <Upload>
            <Button>
                <Icon Type="upload" /> Change avatar
            </Button>
        </Upload>
    </div>
</div>