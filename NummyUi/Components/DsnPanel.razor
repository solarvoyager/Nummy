@namespace NummyUi.Components

@if (_loading)
{
    <Spin></Spin>
}
else
{
    <div class="rgb-border-card">
        <Card Size="CardSize.Small" >
            <TitleTemplate>
                <div style="margin: 0">
                    <Icon Type="@IconType.Outline.Api"/>
                    Click to copy Nummy DSN
                </div>
            </TitleTemplate>
            <Body>
            <Paragraph Style="margin: 0" Copyable>@dsn?.Url</Paragraph>
            </Body>
        </Card>
    </div>
    
}


<style>
    .rgb-border-card {
        position: relative;
        border: none !important;
        background: white;
        isolation: isolate;
        overflow: visible; /* Ensures the border respects radius */
    }

    .rgb-border-card::before {
        content: '';
        position: absolute;
        top: -2px;
        left: -2px;
        right: -2px;
        bottom: -2px;
        z-index: -1;
        background: linear-gradient(90deg,
        #ff0000, /* Red */
        #ff3d00, #ff6a00, #ff8f00, /* Orange progression */
        #ffb300, #ffd000, #ffe600, /* Yellow progression */
        #f2ff00, #c8ff00, #9dff00, /* Green progression */
        #6eff00, #3fff00, #0fff00,
        #00ff2a, #00ff55, #00ff80,
        #00ffaa, #00ffd5, /* Cyan progression */
        #00f2ff, #00d5ff, #00b8ff,
        #0091ff, #006aff, #0040ff, /* Blue progression */
        #0008ff, #3d00ff, #6200ff,
        #8800ff, #ad00ff, #d100ff, /* Purple progression */
        #f500ff, #ff00e6, #ff00c8,
        #ff00a8, #ff0080, #ff0055, /* Pink/Red progression */
        #ff0020, #ff0000 /* Back to Red */);
        background-size: 400% 400%;
        animation: rgbBorder 35s linear infinite;
        border-radius: 4px; /* Card radius + border thickness */
    }

    @@keyframes rgbBorder {
        0% { background-position: 0% 400%; }
        100% { background-position: -400% 400%; }
    }

    @*For diagonal sliding:
    @@keyframes rgbBorder {
        0% { background-position: 0% 0%; }
        100% { background-position: 100% 100%; }
    }*@
</style>
